@model IEnumerable<employeeManagement.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align:center;">List of Employees</h1>

<div class="float-right">
    <a asp-action="Create" class="btn btn-info">
        <img src="~/css/Icons/person-plus-fill.svg" width="25" height="25" fill="currentColor" viewBox="0 0 25 25" />
    </a>
</div>
<br />
<br />
<table class="table table-bordered table-striped table-hover" id="empList">
    <thead class="bg-info">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn">
                        <img src="~/css/Icons/pencil-fill.svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" />
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn" onclick="return confirm('Do you really want to delete this record?')">
                        <img src="~/css/Icons/trash-fill.svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
